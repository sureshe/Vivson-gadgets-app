<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-9">
          <div class="container">
            <div class="row"> 
              <div class="col-lg-10 ">

    <%= form_for :user, :url => users_admin_path , :method => 'put' do %>
     
                <div style="margin:0;padding:0;display:inline">
                  <input name="utf8" type="hidden" value="&#x2713;" />
                  <input name="authenticity_token" type="hidden" value="B1TuNwFttqwyi00Yz/h3t746UZXcJIeDlasaf2pnE4o=" />
                </div>
                        <h1>Edit Your Details Here </h1>
                <legend>
                  <h4>To get access to this inventory list of gadgets please fill out the following form. Thank you </h4>
                </legend>
       
                <div class="row">
                <div class="form-group">
                  <label class="string optional control-label control-label col-md-2" for="user_Firstname">Firstname</label>
                    <div class="col-md-4">
                      <input class="form-control" id="user_first_name" name="firstname" size="30" type="text" value = "<%= @user.first_name%>" />
                    </div>
                 </div>
                </div><br>

                <div class="row">
                <div class="form-group">
                  <label class="string optional control-label control-label col-md-2" for="user_Lastname">Lastname</label>
                    <div class="col-md-4">
                      <input class="form-control" id="user_last_name" name="lastname" size="30" type="text" value="<%= @user.last_name%>" />
                    </div>
                </div>
                </div><br>

                <div class="row">
                <div class="form-group">
                  <label class="string optional control-label control-label col-md-2" for="user_Institution">Institution</label>
                    <div class="col-md-4">
                      <input class="form-control" id="user_institution" name="institution" size="30" type="text" value="<%= @user.institution%>" />
                    </div>
                </div>
                </div><br>

                <div class="row">
                <div class="form-group">
                  <label class="string optional control-label control-label col-md-2" for="user_Email">Email</label>
                    <div class="col-md-4">
                      <input class="form-control" id="user_email" name="email" size="30" type="text" value="<%= @user.email%>" />
                    </div>
                </div>
                </div><br>
        
                <div class="row">
                <div class="form-group">
                  <label class="string optional control-label control-label col-md-2" for="user_password">Password</label>
                    <div class="col-md-4">
                      <input class="form-control" id="user_password" name="password" size="30" type="password" value="<%= @user.password%>" />
                    </div>
                </div>
                </div><br>
              
                <div class="row">
                <div class="form-group">
                  <label class="col-md-2 control-label">Role</label>
                    <div class="col-md-4">
                      <select class="form-control" id="user_role" name="user[role]">
                        <option value="Administrator">Administrator</option>
                        <option value="NRC Researcher" selected="selected">NRC Researcher</option>
                        <option value="ramu">ramu</option>
                        <option value="User">User</option>
                        <option value="chairmen">chairmen</option>
                        <option value="user">user</option></select>
                    </div>
                </div>
                </div><br>

                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2" style="padding-top:20px;">
                    <input class="btn btn-primary" name="commit" type="submit" value="Update" /> 
                    <%= link_to 'Back', users_admin_index_path, :method => 'get', :class => "btn btn-default"%>
                    <!-- <a href="/users_admin" class="btn btn-default">Back</a> -->
                  </div>
                <div>
            <% end %> 
          </div>
        </div>
      </div>
  </div>
</div>
