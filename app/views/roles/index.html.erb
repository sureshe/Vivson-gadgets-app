<div class="container-fluid">
<div class="row">
<div class="col-md-10">
<div class="col-md-9" id="padding">
  <div class="row">
    <div class="col-md-10">
	   <p class="lead">Listing Roles</p>
    </div>
    
    <div class=" col-md-2">
      <%= link_to 'Add Role', new_role_path, :method => 'get', :class => "btn btn-primary"%>
    </div>
  </div>

  <table class="table table-striped table-hover">
  <tr>
    <th>Role Name</th>
    <th colspan="3" class="text-center"></th>
  </tr>
           
        <% if @user_roles.blank? %> 
          <p> No Roles Are Added </p>
        <% else %>
        <% @user_roles.each do |uroles| %>
  <tr>
    <td><%= uroles.role_name %></td> 
    <td><%= link_to 'Edit', edit_role_path(uroles.id) %></td>
    <td><%= link_to 'Destroy', role_path(uroles.id), :method => 'delete' %>
    </td>
  </tr>
        <% end %>
        <% end %>
        <div  class='col-lg-offset-4'>
  </div>
</div>
</div>
</div>
</div>

